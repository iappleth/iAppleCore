<?xml version="1.0" encoding="UTF-8"?>

<output>
    <ticket>
        <line></line>
        <line>
            <text align="center" length="42">Openbravo Retail</text>
        </line>
        <line>
            <text align="center" length="42">Copyright 2007-2011 Openbravo, S.L.U.</text>
        </line>
        <line></line>
        
        <line>
            <text align="left" length="15">Document:</text>
            <text>9332</text>
        </line>
        <line>
            <text align="left" length="15">Date:</text>
            <text>Feb. 21, 2012.</text>
        </line>   
        
        <line></line>
        <line>
            <text align ="left" length="17">Item</text>
            <text align ="right" length="10">Price</text>
            <text align ="right" length="5"></text>
            <text align ="right" length="10">Value</text>
        </line>
        <line>
             <text>------------------------------------------</text>
        </line>
    <% 
     for (var i = 0, max = order.lines.length; i < max; i++) { 
    %>
        
        <line>

            <text align ="left" length="17"><%= order.lines[i].productidentifier %></text>

            <text align ="right" length="10"><%= order.lines[i].printPrice() %></text>
            <text align ="right" length="5">x<%= order.lines[i].printQty() %></text>
            <text align ="right" length="10"><%= order.lines[i].printNet() %></text>
        </line>  
    <%
     } 
    %>
        <line>
             <text>------------------------------------------</text>
        </line>
        <line></line>
        <line size="1">
            <text align ="left" length="16" bold="true">Total.</text>
            <text align ="right" length="20" bold="true"><%= order.printNet() %></text>
        </line>    
        
        
    </ticket>
        
    <display>
        <line>
            <text align="left" length="10">Total.</text>
            <text align="right" length="10"><%= order.printNet() %></text>
        </line>
        <line>
           <text align="center" length="20">Thank you.</text>
        </line>
    </display>
    
    
    
    
</output>